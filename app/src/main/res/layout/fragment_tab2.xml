<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cs442.kvaradar.quantum.Tab2"
    android:background="@color/colorPrimaryDark"
    android:clickable="true">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:layout_width="250dp"
        android:layout_height="350dp"
        app:srcCompat="@drawable/image1"
        android:id="@+id/imageView"
        android:layout_marginTop="28dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:onClick="detail" />

    <TextView
        android:text="2011 ‧ Comedy/Crime ‧ 1h 27m"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/textView3"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        android:textColor="?android:attr/colorPressedHighlight"
        android:layout_below="@+id/textView"
        android:layout_marginLeft="15dp" />

    <ImageButton
        app:srcCompat="?attr/actionModeShareDrawable"
        android:id="@+id/imageButton2"
        android:background="?android:attr/colorPressedHighlight"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="17dp"
        android:layout_marginEnd="28dp"
        android:layout_above="@+id/textView2"
        android:layout_alignParentEnd="true"
        android:visibility="gone"/>

    <TextView
        android:text="A man caught in the middle of two simultaneous robberies at the same bank desperately tries to protect the teller with whom he's secretly in love."
        android:layout_width="wrap_content"
        android:id="@+id/textView2"
        android:textColor="?android:attr/colorPressedHighlight"
        android:gravity="fill"
        android:layout_marginLeft="15dp"
        android:layout_height="71dp"
        android:visibility="gone"
        android:layout_below="@+id/textView3"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_alignStart="@+id/textView3"
        android:layout_alignEnd="@+id/textView3"
        android:gravity="bottom|left|center_vertical"
        android:text="Round Table"
        android:textColor="?android:attr/colorPressedHighlight"
        android:textSize="18sp" />

</RelativeLayout>
