<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.cs442.dsuraj.quantumc.SeatSelection"
    android:background="@color/colorPrimaryDark">


    <TextView
        android:text="Available Seats"
        android:layout_width="wrap_content"
        android:id="@+id/textView"
        android:layout_height="50dp"
        android:textSize="18sp"
        android:textColor="?android:attr/colorPressedHighlight"
        android:gravity="bottom|left|center_vertical"
        android:layout_above="@+id/button3"
        android:layout_toEndOf="@+id/button2"
        tools:textColor="#E6C200" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="28dp"
        android:layout_height="25dp"
        android:id="@+id/button2"
        android:layout_alignParentStart="true"
        android:backgroundTint="#e6c200"
        />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="28dp"
        android:layout_height="25dp"
        android:id="@+id/button3"
        android:layout_below="@+id/button2"
        android:layout_alignParentStart="true"
        android:backgroundTint="#A45B5B" />

    <TextView
        android:text="Sold  Seats"
        android:layout_width="wrap_content"
        android:id="@+id/textView2"
        android:layout_height="50dp"
        android:textSize="18sp"
        android:textColor="#A45B5B"
        android:gravity="bottom|left|center_vertical"
        android:layout_below="@+id/textView"
        android:layout_toEndOf="@+id/button3"
        android:layout_alignBottom="@+id/button3" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="28dp"
        android:layout_height="25dp"
        android:id="@+id/Your"
        android:backgroundTint="#87A96B"
        android:layout_below="@+id/button3"
        android:layout_toStartOf="@+id/textView2"
        />

    <TextView
        android:text="Your  Seats"
        android:layout_width="wrap_content"
        android:id="@+id/textView11"
        android:layout_height="70dp"
        android:textSize="18sp"
        android:textColor="#87A96B"
        android:gravity="bottom|left|center_vertical"
        android:layout_alignTop="@+id/Your"
        android:layout_toEndOf="@+id/Your"
        android:layout_alignBottom="@+id/Your"
        android:backgroundTint="#87A96B"
        />

    <TextView
        android:text="Menu"
        android:layout_width="wrap_content"
        android:id="@+id/textViewMenu"
        android:layout_height="30dp"
        android:textSize="18sp"
        android:textColor="#000000"
        android:gravity="center_vertical"
        android:layout_below="@+id/textView11"
        android:backgroundTint="#87A96B"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/textViewMenu"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:id="@+id/proceed"
        android:backgroundTint="?android:attr/colorPressedHighlight"
        android:text="Proceed"
        android:onClick="seat_information"
        android:layout_marginBottom="24dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/textView13"
        android:background="#E6C200"/>

    <TextView
        android:id="@+id/textView13"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_above="@+id/proceed"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:textColor="?android:attr/colorPressedHighlight"
        android:textSize="20dp" />

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@id/recyclerView">

    <Button
        android:id="@+id/A1"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="40dp"
        android:layout_height="25dp"
        android:background="#E6C200"
        android:layout_centerVertical="true"
        android:text="A1"
        android:textSize="10dp" />

    <Button
        android:id="@+id/A2"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="45dp"
        android:layout_height="25dp"
        android:background="#E6C200"
        android:layout_centerHorizontal="true"
        android:text="A2"
        android:textSize="10dp" />

    <Button
        android:id="@+id/A3"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="45dp"
        android:layout_height="25dp"
        android:background="#E6C200"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="A3"
        android:textSize="10dp" />

    <Button
        android:id="@+id/A4"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="45dp"
        android:layout_height="25dp"
        android:background="#E6C200"
        android:text="A4"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textSize="10dp" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="40dp"
            style="?android:attr/buttonStyleSmall"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:text="1"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@id/recyclerView"
        android:layout_alignParentRight="true">

    <Button
        android:id="@+id/A5"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="45dp"
        android:layout_height="25dp"
        android:background="#E6C200"
        android:text="A5"
        android:textSize="10dp"
        android:layout_centerVertical="true"/>

    <Button
        android:id="@+id/A6"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="45dp"
        android:layout_height="25dp"
        android:background="#E6C200"
        android:text="A6"
        android:textSize="10sp"
        android:layout_centerHorizontal="true"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="45dp"
        android:layout_height="25dp"
        android:id="@+id/B1"
        android:text="B1"
        android:textSize="10dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="#E6C200" />

    <Button
        android:id="@+id/B2"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="45dp"
        android:layout_height="25dp"
        android:background="#E6C200"
        android:text="B2"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textSize="10dp" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="40dp"
            style="?android:attr/buttonStyleSmall"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:text="2"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout3"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/relativeLayout1">

    <Button
        android:id="@+id/B3"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="45dp"
        android:layout_height="25dp"
        android:background="#E6C200"
        android:text="B3"
        android:layout_centerVertical="true"
        android:textSize="10dp" />

    <Button
        android:id="@+id/B4"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="45dp"
        android:layout_height="25dp"
        android:background="#E6C200"
        android:text="B4"
        android:layout_centerHorizontal="true"
        android:textSize="10dp" />

    <Button
        android:id="@+id/C1"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="45dp"
        android:layout_height="25dp"
        android:background="#E6C200"
        android:text="C1"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:textSize="10dp" />

    <Button
        android:id="@+id/C2"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="45dp"
        android:layout_height="25dp"
        android:background="#E6C200"
        android:text="C2"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:textSize="10dp" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="40dp"
            style="?android:attr/buttonStyleSmall"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:text="3"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout4"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@id/relativeLayout2"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true">
    <Button
        android:id="@+id/C3"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="45dp"
        android:layout_height="25dp"
        android:background="#E6C200"
        android:text="C3"
        android:layout_centerVertical="true"
        android:textSize="10dp" />

    <Button
        android:id="@+id/C4"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="45dp"
        android:layout_height="25dp"
        android:background="#E6C200"
        android:text="C4"
        android:layout_centerHorizontal="true"
        android:textSize="10dp" />

    <Button
        android:id="@+id/D1"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="45dp"
        android:layout_height="25dp"
        android:background="#E6C200"
        android:text="D1"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:textSize="10dp" />

    <Button
        android:id="@+id/D2"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="45dp"
        android:layout_height="25dp"
        android:background="#E6C200"
        android:text="D2"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:textSize="10dp" />

    <Button
        android:id="@+id/D3"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="45dp"
        android:layout_height="25dp"
        android:background="#E6C200"
        android:text="D3"
        android:layout_alignParentBottom="true"
        android:textSize="10dp" />

    <Button
        android:id="@+id/D4"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="45dp"
        android:layout_height="25dp"
        android:background="#E6C200"
        android:text="D4"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:textSize="10dp" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="40dp"
            style="?android:attr/buttonStyleSmall"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:text="4"/>

    </RelativeLayout>

</RelativeLayout>
